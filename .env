# Telegram Bot Token
BOT_TOKEN=your_bot_token_here

# MongoDB Connection URI (use MongoDB Atlas or local MongoDB)
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/filestore?retryWrites=true&w=majority

# Admins - Comma-separated Telegram user IDs
ADMINS=123456789,987654321

# Force Subscription Channel IDs (Use negative IDs for public/private channels)
CHANNELS=-1001234567890,-1009876543210

# Use shortener (True or False)
USE_SHORTENER=False

# Webhook URL for deployment (set only if using webhooks)
WEBHOOK_URL=https://yourdomain.com/webhook

# Port (used only in webhook mode or Docker)
PORT=8080
